---
export interface Props {
    image: string
    title: string
    description: string
}

const { image, title, description } = Astro.props
---

<div class="bg-white rounded-md shadow-md">
    <img src={image} alt="imagen" class="object-cover w-full h-80">
    <div class="p-8">
    
    <h3 class="font-bold text-2xl">{title}</h3>
    <p class="pt-3">{description}</p>
    
    <slot />
    </div>
</div>